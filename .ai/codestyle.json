{
  "version": "1.0",
  "rules": {
    "codeStyle": {
      "php": {
        "standard": "PSR12",
        "phpcsConfigPath": "./phpcs.xml",
        "useExistingPhpcs": true,
        "indentation": "space",
        "indent_size": 4,
        "lineEndings": "LF"
      },
      "javascript": {
        "semiColons": true,
        "quotes": "single",
        "indentation": "space",
        "indent_size": 2,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always"
      },
      "css": {
        "indentation": "space",
        "indent_size": 2,
        "quotes": "double"
      },
      "json": {
        "indentation": "space",
        "indent_size": 2,
        "trailingComma": "es5"
      }
    },
    "fileNaming": {
      "php": {
        "convention": "StudlyCaps",
        "suffix": ".php"
      },
      "javascript": {
        "convention": "camelCase",
        "extensions": ["js", "jsx", "ts", "tsx"],
        "testFilePattern": "*.test.{js,ts,jsx,tsx}",
        "testFileConvention": "camelCase"
      },
      "css": {
        "convention": "kebab-case",
        "extensions": ["css", "scss", "sass"]
      }
    },
    "psr12": {
      "enforceStrictTypes": true,
      "declareStrictTypes": true,
      "useTypeHints": true,
      "returnTypeDeclaration": true
    },
    "security": {
      "requireDataValidation": true,
      "requireSanitization": true,
      "requireNonceVerification": true
    }
  },
  "ignore": [
    "vendor/**",
    "web/wp-core/**",
    "web/wp-content/uploads/**",
    "node_modules/**",
    "*.log",
    "*.sql",
    "*.gz"
  ],
  "ai": {
    "contextWindow": "large",
    "includeFileTypes": ["php", "js", "css", "json", "md"],
    "excludePatterns": ["*.min.js", "*.min.css"],
    "suggestions": {
      "enableSecurityRecommendations": true,
      "enablePerformanceHints": true,
      "enableWordPressSpecific": true
    }
  },
  "development": {
    "lando": {
      "enabled": true,
      "configPath": "./.lando.yml"
    },
    "phpcs": {
      "enabled": true,
      "configPath": "./phpcs.xml",
      "executablePath": "./.lando-phpcs"
    },
    "phpcbf": {
      "enabled": true,
      "executablePath": "./.lando-phpcbf"
    }
  }
}
